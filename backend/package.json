    "supertest": "^7.1.1",
    "ts-node": "^10.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./html-report",
          "filename": "report.html",
          "openReport": true,
          "includeFailureMsg": true
        }
      ]
    ]
  }
