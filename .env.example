# ========================================
# Environment Variables for OpenMarket AWS
# Copy this file to .env and update values
# ========================================

# ========================================
# Application
# ========================================
NODE_ENV=development
APP_NAME=OpenMarket
APP_URL=http://localhost:3000

# ========================================
# Database (MySQL)
# ========================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=openmarket
MYSQL_USER=openmarket
MYSQL_PASSWORD=openmarket123

# Database Connection String
DATABASE_URL=mysql://openmarket:openmarket123@localhost:3306/openmarket

# ========================================
# Redis Cache
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# AWS Configuration (Local Development uses LocalStack)
# ========================================
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT=http://localhost:4566

# S3
S3_BUCKET_NAME=openmarket-uploads
S3_BUCKET_REGION=ap-northeast-2

# CloudFront (Production only)
CLOUDFRONT_URL=

# ========================================
# Email Configuration
# ========================================
# For development, use Mailhog or similar
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@openmarket.com
SMTP_FROM_NAME=OpenMarket

# ========================================
# Payment Gateways
# ========================================
# Toss Payments
TOSS_CLIENT_KEY=
TOSS_SECRET_KEY=
TOSS_SUCCESS_URL=http://localhost:3000/payment/success
TOSS_FAIL_URL=http://localhost:3000/payment/fail

# Kakao Pay
KAKAO_PAY_CID=
KAKAO_PAY_SECRET=

# ========================================
# Frontend Configuration
# ========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Portal URLs
NEXT_PUBLIC_USER_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_URL=http://localhost:3000/admin
NEXT_PUBLIC_SELLER_URL=http://localhost:3000/seller

# ========================================
# Mobile App Configuration
# ========================================
FLUTTER_API_URL=http://localhost:3001

# ========================================
# Monitoring & Logging
# ========================================
LOG_LEVEL=debug
SENTRY_DSN=

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CORS
# ========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ========================================
# File Upload
# ========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# ========================================
# Session
# ========================================
SESSION_SECRET=your-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# ========================================
# Feature Flags
# ========================================
FEATURE_ENABLE_SIGNUP=true
FEATURE_ENABLE_SOCIAL_LOGIN=true
FEATURE_ENABLE_SELLER_REGISTRATION=true
FEATURE_ENABLE_REVIEWS=true
FEATURE_ENABLE_RECOMMENDATIONS=true

# ========================================
# Admin Configuration
# ========================================
ADMIN_DEFAULT_EMAIL=admin@openmarket.com
ADMIN_DEFAULT_PASSWORD=change-this-password

# ========================================
# Seller Configuration
# ========================================
SELLER_COMMISSION_RATE=0.15
SELLER_MIN_PAYOUT=50000

# ========================================
# User Configuration
# ========================================
USER_MAX_CART_ITEMS=100
USER_MAX_WISHLIST_ITEMS=500
